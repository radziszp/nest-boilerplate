{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@user/*": ["boilerplate/src/user/*"],
      "@auth/*": ["boilerplate/src/auth/*"],
      "@shared/*": ["boilerplate/src/shared/*"],
      "@todo/*": ["boilerplate/src/todo/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
