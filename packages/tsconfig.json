{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "paths": {
      "@user/*": ["todo/src/user/*"],
      "@auth/*": ["todo/src/auth/*"],
      "@shared/*": ["todo/src/shared/*"],
      "@todo/*": ["todo/src/todo/*"],
      "@kafka/*": ["todo/src/kafka/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
